{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2019",
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "*.ts": ["src/*.ts"]
    },
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
